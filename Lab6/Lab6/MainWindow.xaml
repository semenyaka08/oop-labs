<Window x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab6 - Matrix Manager" Height="300" Width="400"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Розмір матриці (n):" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="MatrixSizeTextBox" Margin="0,0,0,10" Height="25"/>

            <TextBlock Text="Мінімальне значення (Min):" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="MinValueTextBox" Margin="0,0,0,10" Height="25"/>

            <TextBlock Text="Максимальне значення (Max):" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="MaxValueTextBox" Margin="0,0,0,10" Height="25"/>

            <Button x:Name="ExecuteButton" Content="Виконати" Height="35" Click="ExecuteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>