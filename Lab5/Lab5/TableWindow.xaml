<Window x:Class="Lab5.TableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="TableWindow" Height="450" Width="600">
    <Grid>
        <DataGrid x:Name="TableDataGrid" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Назва" Binding="{Binding Name}" />
                <DataGridTextColumn Header="x1" Binding="{Binding X1}" />
                <DataGridTextColumn Header="y1" Binding="{Binding Y1}" />
                <DataGridTextColumn Header="x2" Binding="{Binding X2}" />
                <DataGridTextColumn Header="y2" Binding="{Binding Y2}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
